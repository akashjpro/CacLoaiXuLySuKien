<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akashjpro.cacloaixulysukien.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Số a: "
        android:id="@+id/txtSoThu1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtSoA"
        android:hint="Nhập vào số thứ 1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Số b:"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtSoB"
        android:hint="Nhập vào số thứ 2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(+) onClick XML"
        android:id="@+id/btnCong"
        android:layout_gravity="center_horizontal"
        android:onClick="xuLyPhepCong" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(-)Anomous Listener"
        android:id="@+id/btnTru"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(*) Variable Listener"
            android:id="@+id/btnNhan" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(/)Variable Listener"
            android:id="@+id/btnChia" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity As Listenner"
        android:id="@+id/btnAn"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explicit Class Listenner"
        android:id="@+id/btnThoat"
        android:layout_gravity="center_horizontal" />

    <Button
        android:onClick="xuLyDoiManHinhKhac"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đổi màn hình khác"
        android:id="@+id/btnDoiManHinh"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
